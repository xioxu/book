doctype html
html
	head
		meta(charset="UTF-8")
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		//link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.min.css')
		link(rel='stylesheet', href='/stylesheets/library.css')
		script(src="/javascripts/jquery-1.8.3.min.js")
		script(src="/javascripts/jquery.easing.min.js")
	body
		div.page
			div.header
				div.container
					a.logo(href="/book")
						img(src="/images/logo.png")
					div.about-user
						- if(nick)
							div.yahei.user-action
								span.user-nick #{nick}
									i.icons.icon-hassub
								ul.act-list
									li.item
										a(href="/book/myborrow") 我的借阅
			div.banner
				div.container
					div.banner-switch
						img.thumb(src="/images/1.jpg", width="300", height="240")
						label.intro(width="605", height="48") 阅读的乐趣
						img.thumb(src="/images/2.jpg", width="300", height="240")
						label.intro(width="605", height="48") 知识的分享
						img.thumb(src="/images/4.png", width="300", height="240")
						label.intro(width="605", height="48") 精选的书籍
						ul.switch-bar
							li.item.select 
							li.item 
							li.item 
			div.container.blockcontent
				block content
			div.yahei.footer
				div.container
					&copy; CROSS&nbsp;&nbsp;
					- var adm = typeof isadmin === "undefined" ? 0 : isadmin;
					- if(adm != 0)
						| <a href="/book/addbook">添加图书</a>&nbsp;&nbsp;
						| <a href="/book/manage">管理借阅</a>&nbsp;&nbsp;
						| <a href="/book/returnbook">管理还书</a>
		script(src="/javascripts/library.js")