extends layout

block content
	- if(err)
		div.alert.alert-error= err
	- if(success)
		div.alert.alert-info= success
	- if(book)
		form.form-horizontal(action="/book/updatebook", method="get")
			div.control-group
				label.control-label(for="LB-number",class="required") 图书名称:
				div.controls
					input.input-large(type="text", required="true",name="bookname", id="LB-number", placeholder="总册数（1,2,3）", value="#{book.bookname}")
			div.control-group
				label.control-label(for="LB-number",class="required") 总册数:
				div.controls
					input.input-large(type="text", required="true",name="book_total", id="LB-number", placeholder="总册数（1,2,3）", value="#{book.book_total}")


			div.control-group
				label.control-label(for="LB-isbn",class="required") ISBN编码:
				div.controls
					input.input-large(type="text", required="true",name="isbn", id="LB-ISBN", placeholder="请填写图书ISBN编码", value="#{book.isbn}", readonly)
			div.control-group
				label.control-label(for="LB-bookcate") 图书分类:
				div.controls
					input.input-large(type="text", name="book_cate", id="LB-bookcate", value="#{book.book_cate}", placeholder="图书分类（1,2,3）")

			div.control-group
				label.control-label(for="author") 作者:
				div.controls
					input.input-large(type="text", name="author", id="author", placeholder="作者",value="#{book.author}")

			div.control-group
				label.control-label(for="publisher") 出版社:
				div.controls
					input.input-large(type="text", name="publisher", id="publisher", placeholder="请填写出版社",value="#{book.publish_house}")
			div.control-group
				label.control-label(for="recommend") 图书备注:
				div.controls
					input.input-large(type="text", name="recommend", id="recommend", placeholder="图书备注",value="#{book.recommend}")

			div.control-group
				label.control-label(for="pubdate") 出版日期:
				div.controls
					input.input-large(type="date", name="pubdate", id="pubdate", placeholder="出版日期",value="#{book.publish_date}")
			div.control-group
				div.controls
					input.btn.btn-primary(type="submit", value="修改")
		//a(href="/book/savebook") 添加书籍